<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_register">

    <Button
        android:id="@+id/btnUregister"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/times_new_roman"
        android:text="REGISTER"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUcpassword"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/etULemail"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/name"
        android:ems="10"
        android:fontFamily="@font/times_new_roman"
        android:hint="  ENTER EMAIL"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUphn"
        app:layout_constraintVertical_bias="0.032" />



    <EditText
        android:id="@+id/etUphn"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/pn"
        android:ems="10"
        android:fontFamily="@font/times_new_roman"
        android:hint=" ENTER PHONE NO."
        android:inputType="phone"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218" />

    <EditText
        android:id="@+id/etUname"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/pn"
        android:ems="10"
        android:fontFamily="@font/times_new_roman"
        android:hint=" ENTER DISEASES"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <EditText
        android:id="@+id/etUpass"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/pn"
        android:ems="10"
        android:fontFamily="@font/times_new_roman"
        android:hint=" ENTER PASSWORD"
        android:inputType="textPassword"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etULemail"
        app:layout_constraintVertical_bias="0.056" />

    <EditText
        android:id="@+id/etUcpassword"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/pn"
        android:ems="10"
        android:fontFamily="@font/times_new_roman"
        android:hint=" CONFIRM PASSWORD"
        android:inputType="textPassword"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUpass"
        app:layout_constraintVertical_bias="0.053" />



</androidx.constraintlayout.widget.ConstraintLayout>